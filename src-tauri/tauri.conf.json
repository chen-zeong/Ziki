{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ziki",
  "version": "1.0.0",
  "identifier": "com.ziki.ziki",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:7350",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "titleBarStyle": "Overlay",
        "title": "",
        "width": 1147,
        "height": 852,
        "minWidth": 1147,
        "minHeight": 852,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "bin/ffmpeg",
      "bin/ffprobe"
    ]
  }
}
